<p id="notice"><%= notice %></p>

<h1>Listing Order Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Order</th>
      <th>Squad</th>
      <th>Saleprice</th>
      <th>Quantity</th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.order_id %></td>
        <td><%= order_item.squad_id %></td>
        <td><%= order_item.saleprice %></td>
        <td><%= order_item.prodqty %></td>
        <td><%= link_to 'Show', order_item %></td>
        <td><%= link_to 'Edit', edit_order_item_path(order_item) %></td>
        <td><%= link_to 'Destroy', order_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

